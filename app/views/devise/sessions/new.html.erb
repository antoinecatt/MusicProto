<div class="devise">

<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form"><%= f.email_field :email, autofocus: true, placeholder: "Email" %><br>
  	<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remem"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="submit"><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
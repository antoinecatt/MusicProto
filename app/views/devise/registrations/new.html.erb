<div class="devise">
	<div class="backbox-devise">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form"><%= f.email_field :email, autofocus: true, placeholder: "email" %></div>

  <div class="form"><%= f.password_field :password, autocomplete: "off", placeholder: "password" %></div>

  <div class="form"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %></div>

  <div class="sign_in"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>